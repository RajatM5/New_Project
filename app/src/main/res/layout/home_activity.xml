                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:background="@color/black"
                            android:gravity="center"
                            android:text="Exotic Green"
                            android:textColor="@color/white"
                            android:textStyle="bold" />
                    </RelativeLayout>

